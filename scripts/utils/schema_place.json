{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Place",
  "type": "object",
  "required": ["id", "slug", "name", "categories", "location"],
  "properties": {
    "id": { "type": "string" },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": { "type": "string", "minLength": 1 },
    "categories": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "subcategories": {
      "type": "array",
      "items": { "type": "string" }
    },
    "badges": {
      "type": "array",
      "items": { "type": "string" }
    },
    "price_range": {
      "type": "object",
      "properties": {
        "symbol": { "type": "string" },
        "min": { "type": ["number", "null"] },
        "max": { "type": ["number", "null"] },
        "currency": { "type": ["string", "null"] }
      },
      "required": ["symbol"]
    },
    "cuisines": {
      "type": "array",
      "items": { "type": "string" }
    },
    "meals": {
      "type": "array",
      "items": { "type": "string" }
    },
    "dishes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "amenities": {
      "type": "array",
      "items": { "type": "string" }
    },
    "attributes": {
      "type": "object",
      "additionalProperties": { "type": ["boolean", "string", "number", "null"] }
    },
    "rating_overall": { "type": ["number", "null"] },
    "subscores": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "hours": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "busy_profile": {
      "type": ["object", "null"]
    },
    "location": {
      "type": "object",
      "required": ["lat", "lng", "address"],
      "properties": {
        "lat": { "type": "number" },
        "lng": { "type": "number" },
        "neighborhood": { "type": ["string", "null"] },
        "address": { "type": "string" },
        "plus_code": { "type": ["string", "null"] },
        "what3words": { "type": ["string", "null"] }
      }
    },
    "landmarks": {
      "type": "array",
      "items": { "type": "string" }
    },
    "actions": {
      "type": "object",
      "properties": {
        "website": { "type": ["string", "null"] },
        "phone": { "type": ["string", "null"] },
        "maps_url": { "type": ["string", "null"] },
        "menu_url": { "type": ["string", "null"] },
        "booking_url": { "type": ["string", "null"] }
      }
    },
    "gallery": {
      "type": "array",
      "items": { "type": "string" }
    },
    "about": { "type": ["string", "null"] },
    "best_times": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": { "type": "string" },
          "window": { "type": "string" }
        },
        "required": ["label", "window"]
      }
    },
    "public_sentiment": {
      "type": "object",
      "properties": {
        "source": { "type": ["string", "null"] },
        "count": { "type": ["number", "null"] },
        "summary": { "type": ["string", "null"] },
        "last_updated": { "type": ["string", "null"] }
      }
    },
    "faqs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "q": { "type": "string" },
          "a": { "type": "string" }
        },
        "required": ["q", "a"]
      }
    },
    "verified": { "type": "boolean" },
    "methodology_note": { "type": ["string", "null"] },
    "provenance": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "provider": { "type": "string" },
          "place_id": { "type": ["string", "null"] },
          "fields": {
            "type": "array",
            "items": { "type": "string" }
          },
          "terms_url": { "type": ["string", "null"] },
          "collected_at": { "type": ["string", "null"] },
          "model": { "type": ["string", "null"] },
          "prompt_id": { "type": ["string", "null"] },
          "generated_at": { "type": ["string", "null"] },
          "human_reviewed": { "type": ["boolean", "null"] }
        },
        "required": ["provider", "fields"]
      }
    },
    "last_updated": { "type": "string" }
  },
  "additionalProperties": true
}